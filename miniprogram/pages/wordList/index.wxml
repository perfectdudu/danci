<!--单词列表编辑页面-->
<view class="container">
  <!-- 使用Vant导航栏组件 -->
  <van-nav-bar
    title="编辑单词列表"
    left-text="返回"
    left-arrow
    fixed
    placeholder
    safe-area-inset-top
    bind:click-left="onBackClick"
    custom-class="custom-nav"
    title-class="nav-title"
  />

  <view class="content">
    <view class="list-title-section">
      <input class="list-title" value="{{title}}" placeholder="请输入列表名称" bindinput="onTitleChange" />
    </view>

    <view class="words-section">
      <textarea class="words-textarea" placeholder="请输入或粘贴单词，每行一个..." value="{{wordsText}}" bindinput="onWordsChange"></textarea>
    </view>

    <view class="action-buttons">
      <button class="action-button" bindtap="clearWords">
        <text class="iconfont icon-clear"></text> 清空
      </button>
      <button class="action-button" bindtap="sortWords">
        <text class="iconfont icon-sort"></text> 排序
      </button>
      <button class="action-button" bindtap="scanWords">
        <text class="iconfont icon-camera"></text> 拍照识别
      </button>
    </view>

    <view class="save-buttons">
      <button class="cancel-button" bindtap="cancel">取消</button>
      <button class="save-button" bindtap="saveWordList">保存</button>
    </view>
  </view>
</view> 