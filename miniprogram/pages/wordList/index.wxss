/* 单词列表编辑页面样式 */
.container {
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  position: relative;
}

/* 自定义Vant导航栏样式 */
.custom-nav {
  background: transparent !important;
}

/* 导航栏标题样式 */
.nav-title {
  color: #4CAF50 !important;
  font-weight: bold !important;
}

/* 覆盖Vant导航栏返回按钮颜色 */
.van-nav-bar__text {
  color: #4CAF50 !important;
}

.van-icon-arrow-left {
  color: #4CAF50 !important;
}

/* 隐藏原有的头部 */
.header {
  display: none;
}

.content {
  flex: 1;
  padding: 30rpx; /* 已有导航栏placeholder，无需额外顶部内边距 */
  overflow-y: auto;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.back-button {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  border: 2rpx solid #4CAF50;
}

.back-text {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
}

.list-title-section {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.list-title {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
  font-size: 32rpx;
}

.words-section {
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.words-textarea {
  width: 100%;
  height: 500rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  padding: 20rpx;
  font-size: 32rpx;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e8f5e9;
  color: #4CAF50;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.action-button text {
  margin-right: 10rpx;
}

.save-buttons {
  display: flex;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.cancel-button {
  flex: 1;
  margin-right: 15rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.save-button {
  flex: 1;
  margin-left: 15rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
} 