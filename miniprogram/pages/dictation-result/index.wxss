/* 听写结果页面样式 */
.result-container {
  padding: 0;
  height: 100vh;
  /* 固定高度 */
  display: flex;
  flex-direction: column;
  background-color: #e8f5e9;
  position: relative;
  overflow: hidden;
  /* 防止整体滚动 */
  box-sizing: border-box;
  padding: 20rpx 0rpx;
}

/* 导航栏样式 */
.custom-nav {
  background-color: #4CAF50 !important;
  box-shadow: none !important;
  border-bottom: none !important;
}

.nav-title {
  color: #ffffff !important;
  font-weight: bold !important;
}

/* Vant导航栏返回按钮颜色 */
.van-nav-bar__text {
  color: #ffffff !important;
}

.van-icon-arrow-left {
  color: #ffffff !important;
}

/* 记录项 */
.record-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.record-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.record-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

/* 记录内容区域 */
.record-content {
  padding-top: 20rpx;
}

/* 记录统计 */
.record-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

/* 错误数字样式 */
.stat-value.wrong {
  color: #f44336;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.correct {
  color: #4CAF50;
}

.wrong {
  color: #F44336;
}

/* 记录操作 */
.record-actions {
  display: flex;
  justify-content: flex-end;
}

.record-action {
  font-size: 28rpx;
  color: #2196F3;
  padding: 10rpx 20rpx;
}

/* 单词详情部分 */
.details-section {
  margin: 0;
  /* 移除左右边距 */
  margin-right: -2rpx;
  /* 确保完全贴合右侧 */
  background-color: #fff;
  border-radius: 20rpx 0 0 0;
  /* 只保留左上角圆角 */
  padding: 30rpx 0 30rpx 30rpx;
  /* 移除右侧内边距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  flex: 1;
  /* 填充剩余空间 */
  width: 100%;
  /* 宽度铺满 */
  overflow: hidden;
  /* 仅允许内部滚动 */
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  flex-shrink: 0;
  /* 防止压缩 */
  padding-right: 30rpx;
  /* 为标题单独添加右侧内边距 */
}

.word-list {
  flex: 1;
  /* 占据details-section剩余空间 */
  overflow-y: scroll;
  /* 显式设置为scroll以确保显示滚动条 */
  -webkit-overflow-scrolling: touch;
  /* 增强iOS滚动体验 */
  padding-right: 30rpx;
  /* 为单词列表内容单独添加右侧内边距 */
  margin-right: 0;
  /* 确保滚动条贴近边缘 */
  box-sizing: border-box;
}

.word-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.word-item.correct {
  background-color: #f1f8e9;
}

.word-item.wrong {
  background-color: #ffebee;
}

.word-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.word-answer {
  font-size: 28rpx;
  color: #F44336;
}