.control-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 30rpx;
  font-size: 50rpx;
  color: #4CAF50;
  transition: none;
  position: relative;
  /* box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.1); */
  flex-shrink: 0;
  overflow: hidden;
  /* background-color: rgba(255, 255, 255, 0.9); */
  /* border: 4rpx solid #4CAF50; */
}

.control-icon {
  width: 70rpx;
  height: 70rpx;
}

.play-button {
  width: 180rpx;
  height: 180rpx;
  background-color: transparent;
  box-shadow: none;
  border: none;
}

.play-button .control-icon {
  width: 180rpx;
  height: 180rpx;
}

.control-button:active {
  transform: none;
}

/* 删除脉动动画 */
.play-button.active {
  background-color: transparent;
}

.input-area {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 1rpx solid #e0e0e0;
}

.input-area textarea {
  width: 100%;
  height: 120rpx;
  border: none;
  background-color: transparent;
  font-size: 32rpx;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.action-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background-color: rgba(255, 255, 255, 0.8);
  color: #4CAF50;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  margin: 0;
  font-weight: normal;
}

.action-button.primary {
  background-color: #4CAF50;
  color: white;
}

.action-button text {
  margin-right: 10rpx;
}

.stop-section {
  margin-top: 30rpx;
  text-align: center;
}

.stop-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 auto;
  border: 1rpx solid #ddd;
}

.stop-button text {
  margin-right: 10rpx;
} 