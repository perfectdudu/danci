/* 删除脉动动画 */
.play-button.active {
  background-color: transparent;
}

.input-area {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 1rpx solid #e0e0e0;
}

.input-area textarea {
  width: 100%;
  height: 120rpx;
  border: none;
  background-color: transparent;
  font-size: 32rpx;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.action-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background-color: rgba(255, 255, 255, 0.8);
  color: #4CAF50;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  margin: 0;
  font-weight: normal;
}

.action-button.primary {
  background-color: #4CAF50;
  color: white;
}

.action-button text {
  margin-right: 10rpx;
}

.stop-section {
  margin-top: 30rpx;
  text-align: center;
}

.stop-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 auto;
  border: 1rpx solid #ddd;
}

.stop-button text {
  margin-right: 10rpx;
}

/* 用户输入区域 */
.input-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.answer-input {
  width: 90%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  box-shadow: inset 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

/* 导航按钮 */
.navigation-buttons {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.nav-button {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.nav-icon {
  width: 50rpx;
  height: 50rpx;
}

.button-hover {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
} 