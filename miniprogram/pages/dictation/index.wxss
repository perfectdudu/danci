/* 听写进行中页面样式 */
.container {
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #e8f5e9 0%, #b2dfdb 100%);
  position: relative;
  overflow: hidden;
}



/* 隐藏原有的头部 */
.header {
  display: none;
}

/* 添加卡通气泡背景 */
.container::before {
  content: "";
  position: absolute;
  top: 10%;
  left: 10%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  z-index: 0;
}

.container::after {
  content: "";
  position: absolute;
  bottom: 15%;
  right: 15%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  z-index: 0;
}

.header {
  height: 88rpx;
  background-color: transparent;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 36rpx;
  font-weight: bold;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 1;
}

.back-button {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  border: 2rpx solid #4CAF50;
}

.back-icon-image {
  display: none;
}

.back-text {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.settings-icon {
  position: absolute;
  right: 30rpx;
  font-size: 36rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx; /* 正常内边距 */
  padding-top: 30rpx; /* 导航栏已有placeholder，无需额外空间 */
  box-sizing: border-box;
  z-index: 1;
  position: relative;
}

.word-display {
  text-align: center;
  font-size: 70rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 80rpx;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 50rpx 70rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 6rpx solid #4CAF50;
  max-width: 90%;
  position: relative;
  overflow: hidden;
}

/* 添加卡通风格边框 */
.word-display::before {
  content: "";
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border: 4rpx dashed rgba(76, 175, 80, 0.3);
  border-radius: 40rpx;
  z-index: -1;
}

.player-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx 0;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 150rpx;
  padding: 30rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  border: 6rpx solid #4CAF50;
  width: 90%;
  position: relative;
  box-sizing: border-box;
}

