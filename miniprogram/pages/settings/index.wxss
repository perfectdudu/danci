/* 听写设置页面样式 */
.container {
  padding: 0;
}

.header {
  height: 88rpx;
  background-color: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 36rpx;
  font-weight: bold;
  width: 100%;
}

.back-button {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  border: 2rpx solid #4CAF50;
}

.back-text {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
}

.settings-content {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.setting-group {
  margin-bottom: 50rpx;
}

.setting-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.setting-label {
  font-size: 30rpx;
}

.setting-value {
  display: flex;
  align-items: center;
}

.picker-value {
  color: #4CAF50;
  font-size: 30rpx;
  padding-right: 10rpx;
}

.save-button {
  background-color: #4CAF50;
  color: white;
  border-radius: 48rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
} 