/* 个人中心页面样式 */
.container {
  padding: 0;
  background-color: #ffffff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  height: 88rpx;
  background-color: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 0 30rpx;
}

.header-title {
  font-size: 32rpx;
  flex: 1;
  text-align: center;
}

.header-tools {
  display: flex;
  align-items: center;
}

.tool-icon {
  margin-left: 20rpx;
  font-size: 32rpx;
}

.main-title {
  font-size: 36rpx;
  font-weight: bold;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  padding: 30rpx 0;
}

.profile-card {
  background-color: #f8f8f8;
  margin-bottom: 20rpx;
}

.profile-section {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e8f5e9;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 40rpx;
  overflow: hidden;
  border: 1px solid #eee;
}

.avatar-text {
  color: #4CAF50;
  font-size: 48rpx;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.username {
  font-size: 34rpx;
  color: #333;
}

.login-btn {
  font-size: 28rpx;
  padding: 8rpx 30rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0;
  width: 180rpx;
}

.user-stats {
  font-size: 26rpx;
  color: #888;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.menu-list {
  width: 100%;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-icon-title {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 32rpx;
  margin-right: 10rpx;
}

.footer {
  margin-top: auto;
  width: 100%;
}

.tab-bar {
  display: flex;
  height: 100rpx;
  background-color: white;
  border-top: 1px solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.tab-item.active {
  color: #4CAF50;
} 