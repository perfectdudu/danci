/* 听写记录页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 记录列表 */
.record-list {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 记录项 */
.record-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.record-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.record-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

/* 记录内容区域 */
.record-content {
  padding-top: 20rpx;
}

/* 记录统计 */
.record-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

/* 错误数字样式 */
.stat-value.wrong {
  color: #f44336;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.correct {
  color: #4CAF50;
}

.wrong {
  color: #F44336;
}

/* 记录操作 */
.record-actions {
  display: flex;
  justify-content: flex-end;
}

.record-action {
  font-size: 28rpx;
  color: #2196F3;
  padding: 10rpx 20rpx;
}

/* 空状态 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
}

/* 下拉提示 */
.pull-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
  margin-top: auto;
} 