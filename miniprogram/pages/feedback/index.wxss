.feedback-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.feedback-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.feedback-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.feedback-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.feedback-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.optional {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.contact-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
}

.submit-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin: 40rpx auto;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s;
}

.submit-btn.submitted {
  background-color: #8BC34A;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.feedback-footer {
  text-align: center;
  margin-top: 60rpx;
}

.footer-text {
  font-size: 26rpx;
  color: #999;
}
