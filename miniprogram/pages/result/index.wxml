<!--听写结果页面-->
<view class="container">
  <!-- 使用Vant导航栏组件 -->
  <van-nav-bar
    title="听写结果"
    left-text="返回"
    left-arrow
    fixed
    placeholder
    safe-area-inset-top
    bind:click-left="onBackClick"
    custom-class="custom-nav"
    title-class="nav-title"
  />

  <view class="content">
    <view class="result-summary">
      <view class="result-title">{{result.title}}</view>
      <view class="result-stats">
        <view class="stat-item">
          <view class="stat-value correct">{{result.correctCount}}</view>
          <view class="stat-label">正确</view>
        </view>
        <view class="stat-item">
          <view class="stat-value wrong">{{result.wrongCount}}</view>
          <view class="stat-label">错误</view>
        </view>
        <view class="stat-item">
          <view class="stat-value">{{result.accuracy}}%</view>
          <view class="stat-label">正确率</view>
        </view>
      </view>
      <view class="time-spent">用时：{{result.timeSpent}}分钟</view>
    </view>

    <view class="word-detail-section">
      <view class="section-title">单词详情</view>

      <view class="word-list">
        <block wx:for="{{result.words}}" wx:key="word">
          <view class="word-item {{item.correct ? 'correct' : 'wrong'}}">
            <view class="word-content">
              <view class="word-text">{{item.word}}</view>
              <view class="word-phonetic" wx:if="{{item.phonetic}}">{{item.phonetic}}</view>
              <view class="word-answer" wx:if="{{!item.correct}}">您的答案: {{item.userAnswer || '未作答'}}</view>
            </view>
            <view class="word-status">
              <text class="iconfont {{item.correct ? 'icon-check' : 'icon-close'}}"></text>
            </view>
          </view>
        </block>
      </view>
    </view>

    <view class="action-buttons">
      <button class="action-button" bindtap="saveResult">
        <text class="iconfont icon-save"></text> 保存结果
      </button>
      <button class="action-button primary" bindtap="retryDictation">
        <text class="iconfont icon-retry"></text> 重新听写
      </button>
    </view>
  </view>
</view> 