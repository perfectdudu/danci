/* 听写完成页面样式 */
.container {
  padding: 0;  /* 移除水平内边距，让内容紧贴屏幕边缘 */
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f0f9ff;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}



.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden; /* 防止内容溢出 */
  padding-top: 0; /* 导航栏已有placeholder */
}

.scrollable-content {
  width: 100%;
  box-sizing: border-box;
}

/* 完成图标样式 */
.complete-icon-container {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
  padding: 0 30rpx;
}

.complete-icon {
  width: 300rpx;
  height: 300rpx;
}

/* 完成提示文字 */
.complete-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
  padding: 0 30rpx;
}

/* 步骤容器 */
.steps-container {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

/* 步骤项 */
.step-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.step-header {
  margin-bottom: 20rpx;
}

.step-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

.step-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.error-text {
  color: #ff4d4f;
  background-color: #fff2f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin: 0 4rpx;
}

.step-content {
  width: 100%;
}

/* 上传区域 */
.upload-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.upload-placeholder {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  font-size: 80rpx;
  color: #ccc;
  font-weight: 200;
}

/* 单词列表 */
.word-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.word-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  min-width: 120rpx;
  text-align: center;
  border: 1rpx solid #eee;
  position: relative; /* 添加相对定位 */
}

/* 选中效果 */
.word-item.selected {
  background-color: #fff0f0;
  border: 1rpx solid #ffcccc;
}

/* 横杠效果 */
.word-item.selected .word-text {
  position: relative;
}

.word-item.selected .word-text::after {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 4rpx; /* 加粗横线 */
  background-color: #ff4d4f;
  z-index: 2;
}

.word-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.word-translation {
  font-size: 24rpx;
  color: #888;
}

/* 保存按钮容器 */
.button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx calc(30rpx + env(safe-area-inset-bottom)); /* 增加安全区域的底部内边距 */
  background-color: #f0f9ff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  box-sizing: border-box;
}

/* 保存按钮 */
.save-button {
  background-color: #4CAF50;
  color: white;
  border-radius: 48rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(66, 133, 244, 0.3);
  width: 100% !important;
  box-sizing: border-box;
  margin: 0; /* 重置margin */
} 