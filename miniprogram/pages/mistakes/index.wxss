/* 错题本页面样式 */
.container {
  padding: 0;
}

.header {
  height: 88rpx;
  background-color: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 36rpx;
  font-weight: bold;
  width: 100%;
}

.back-icon {
  position: absolute;
  left: 30rpx;
  font-size: 36rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
}

.mistakes-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.mistakes-count {
  font-size: 28rpx;
  color: #888;
}

.dictation-button {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #e8f5e9;
  color: #4CAF50;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.dictation-button text {
  margin-right: 10rpx;
}

.word-list {
  padding: 0 30rpx;
}

.word-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: white;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #eee;
}

.word-content {
  flex: 1;
}

.word-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.word-phonetic {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.word-answer {
  font-size: 26rpx;
  color: #F44336;
}

.word-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-left: 20rpx;
}

.word-play, .word-delete {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4CAF50;
  font-size: 32rpx;
}

.word-delete {
  color: #F44336;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #888;
  margin-bottom: 30rpx;
}

.empty-action {
  background-color: #4CAF50;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.clear-button {
  margin: 30rpx;
  text-align: center;
  color: #888;
  font-size: 28rpx;
  text-decoration: underline;
} 