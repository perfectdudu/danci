.custom-header {
  width: 100%;
  background-color: transparent;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
}

.status-bar {
  width: 100%;
}

.header-content {
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-button {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  border: 2rpx solid #4CAF50;
  height: 60rpx;
}

.back-text {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
  line-height: 1;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.header-placeholder {
  width: 100%;
} 