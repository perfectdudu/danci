.nav-title {
  color: #fff !important;
  font-weight: bold !important;
}

/* 覆盖Vant导航栏返回按钮颜色 */
.van-nav-bar__text {
  color: #fff !important;
}

.van-icon-arrow-left {
  color: #fff !important;
}
.van-icon-arrow-left::before {
  color: #fff !important;
}